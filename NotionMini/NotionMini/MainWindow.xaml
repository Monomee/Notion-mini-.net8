<Window x:Class="NotionMini.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:NotionMini.Views"
        mc:Ignorable="d"
        Title="Notion Mini" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">
    
    <Window.Resources>
        <!-- Window-specific styles -->
        <Style x:Key="DividerStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BorderColor}"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="200"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="320" MinWidth="250"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar: Workspaces -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="12,12,6,12">
            <views:WorkspaceListView DataContext="{Binding WorkspaceVM}" />
        </Border>

        <!-- Divider 1 -->
        <Border Grid.Column="1" Style="{StaticResource DividerStyle}" Width="1"/>

        <!-- Pages -->
        <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="6,12,6,12">
            <views:PageListView DataContext="{Binding PageVM}" />
        </Border>

        <!-- Divider 2 -->
        <Border Grid.Column="3" Style="{StaticResource DividerStyle}" Width="1"/>

        <!-- Editor -->
        <Border Grid.Column="4" Style="{StaticResource CardStyle}" Margin="6,12,12,12">
            <views:EditorView DataContext="{Binding EditorVM}" />
        </Border>
    </Grid>
</Window>
