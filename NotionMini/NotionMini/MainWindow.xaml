<Window x:Class="NotionMini.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:NotionMini.Views"
        mc:Ignorable="d"
        Title="Notion Mini" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar: Workspaces -->
        <views:WorkspaceListView Grid.Column="0" DataContext="{Binding WorkspaceVM}" />

        <!-- Divider -->
        <Border Grid.Column="1" Background="#DDD"/>

        <!-- Pages -->
        <views:PageListView Grid.Column="2" DataContext="{Binding PageVM}" />

        <!-- Editor -->
        <views:EditorView Grid.Column="3" DataContext="{Binding EditorVM}" />
    </Grid>
</Window>
