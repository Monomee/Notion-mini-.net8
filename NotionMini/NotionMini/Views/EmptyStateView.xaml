<UserControl x:Class="NotionMini.Views.EmptyStateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="Auto" Width="Auto">

    <Grid Background="{StaticResource BackgroundColor}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40">
            <!-- Empty State Icon -->
            <Border Background="{StaticResource SurfaceColor}" 
                    CornerRadius="50" 
                    Width="100" 
                    Height="100" 
                    Margin="0,0,0,24">
                <TextBlock Text="ðŸ“„" 
                          FontSize="50" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
            </Border>
            
            <!-- Empty State Title -->
            <TextBlock Text="No pages yet" 
                      Style="{StaticResource HeaderTextStyle}"
                      FontSize="20"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,8"/>
            
            <!-- Empty State Description -->
            <TextBlock Text="Create your first page to get started with Notion Mini" 
                      Style="{StaticResource BodyTextStyle}"
                      HorizontalAlignment="Center"
                      TextWrapping="Wrap"
                      Margin="0,0,0,24"/>
            
            <!-- Action Button -->
            <Button Content="+ Create First Page" 
                    Style="{StaticResource ModernButtonStyle}"
                    HorizontalAlignment="Center"
                    Padding="20,12"/>
        </StackPanel>
    </Grid>
</UserControl>
