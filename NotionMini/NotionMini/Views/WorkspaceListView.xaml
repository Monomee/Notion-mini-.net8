<UserControl x:Class="NotionMini.Views.WorkspaceListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="Auto" Width="Auto">

    <DockPanel>
        <!-- Header -->
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
            <TextBlock Text="Workspaces" Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock Text="Manage your workspaces" Style="{StaticResource BodyTextStyle}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Workspace List -->
        <ListBox ItemsSource="{Binding Workspaces}"
                 SelectedItem="{Binding Selected, Mode=TwoWay}"
                 Style="{StaticResource ModernListBoxStyle}"
                 Margin="0,0,0,16">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem" BasedOn="{StaticResource ModernListBoxItemStyle}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="Bd" 
                                        Background="{TemplateBinding Background}" 
                                        CornerRadius="6"
                                        Margin="0,1"
                                        Padding="12,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📁" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" 
                                                 Style="{StaticResource SubHeaderTextStyle}"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource HoverColor}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource SelectedColor}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Action Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Content="+ Add Workspace" 
                    Style="{StaticResource AnimatedButtonStyle}"
                    Command="{Binding AddWorkspaceCommand}"
                    Margin="0,0,8,0"
                    HorizontalAlignment="Stretch"/>
            <Button Content="🗑️ Delete" 
                    Style="{StaticResource AnimatedButtonStyle}"
                    Command="{Binding DeleteWorkspaceCommand}"
                    HorizontalAlignment="Stretch"/>
        </StackPanel>
    </DockPanel>
</UserControl>

